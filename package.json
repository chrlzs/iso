{
  "name": "iso-game-monorepo",
  "version": "0.1.0",
  "description": "Isometric game engine monorepo with WebGL rendering",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "start:poc": "npm run start -w packages/isometric-poc",
    "start:prison": "npm run start -w packages/prison-tycoon",
    "build:poc": "npm run build -w packages/isometric-poc",
    "build:prison": "npm run build -w packages/prison-tycoon",
    "preview:poc": "npm run preview -w packages/isometric-poc",
    "preview:prison": "npm run preview -w packages/prison-tycoon"
  },
  "keywords": [
    "game",
    "isometric",
    "webgl",
    "pixijs",
    "prison",
    "tycoon"
